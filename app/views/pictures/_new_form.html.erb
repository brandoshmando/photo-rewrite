<% if @picture.errors.any? %>
  <div class="error-explanation">
  <%= render 'new_errors' %>
<% else %>
  <%= form_for @picture do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %></br>

    <%= f.label :author %>
    <%= f.text_field :author %></br>

    <%= f.label :caption %>
    <%= f.text_area :caption %></br>

    <%= f.submit %>
  <% end %>
<% end %>